<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta http-equiv="X-UA-Compatible" content="IE=edge">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>SnowTricks |{% block title %} Snowboard For Life ❄️ !!!{% endblock %}</title>
   <!-- CSS only -->
   <link rel="shortcut icon" href="{{ asset('assets/img/logo.png') }}" type="image">
   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
   <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
   <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
</head>

<body style="min-height: 100%;">

   {% block modale %}{% endblock %}
   {% block modale_delect_trick %}{% endblock %}
   </div>

   <!-- START MENU HEADER -->
   <header class="d-none d-lg-flex d-md-flex d-flex flex-wrap justify-content-center py-3 w-100"
      style="min-width: 0; position:absolute;">
      <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none">
         <span class="fs-4"><img class="logo" src="{{ asset('assets/img/logo.png') }}" alt="logo"></span>
      </a>
      <ul class="nav nav-pills px-5">
         <li class="nav-item"><a href="{{ path('home') }}" class="nav-link fw-bold">Home</a></li>
         <li class="nav-item"><a href="{{ path('home') }}#trick" class="nav-link fw-bold">Tricks</a></li>
         {% if app.user is null %}
         <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link fw-bold">Sign in</a></li>
         <li class="nav-item"><a href="{{ path('register') }}" class="nav-link fw-bold">Sign up</a></li>
         {% else %}
         <li class="nav-item"><a href="{{ path('profile') }}" class="nav-link fw-bold">Profile</a></li>
         <li class="nav-item"><a href="{{ path('add-new-trick') }}" class="nav-link fw-bold">Add new trick</a></li>
         <li class="nav-item"><a href="{{ path('app_logout') }}" class="nav-link fw-bold">Log out</a></li>
         {% endif %}
      </ul>
   </header>
   <!-- END MENU HEADER -->

   {% block content %}{% endblock %}

   <!--START FLASH INFO -->
   {% for message in app.flashes('notify') %}
		<div class="alert alert-primary animate__animated animate__shakeX" role="alert" id="js-alert">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('notify_error') %}
		<div class="alert alert-danger animate__animated animate__shakeX" role="alert" id="js-alert">
			{{ message }}
		</div>
	{% endfor %}
   <!--END FLASH INFO -->
   <!-- START MOBIL MENU -->
   <div class="menu-mobile py-4 fixed-bottom text-center">
      <a href="{{path('home')}}" class="nav-link d-inline"><i class="fas fa-igloo"></i></a>
      <a href="{{path('home')}}#trick" class="nav-link d-inline"><i class="fas fa-skiing"></i></a>

      {% if app.user %}
      <a href="{{path('profile')}}" class="nav-link d-inline"><i class="fas fa-user"></i></a>
      <a href="{{path('profile')}}" class="nav-link d-inline"><i class="fas fa-plus-circle"></i></a>
      <a href="{{path('app_logout')}}" class="nav-link d-inline"><i class="fas fa-sign-out-alt"></i></a>
      {% else %}
      <a href="{{path('app_login')}}" class="nav-link d-inline"><i class="fas fa-sign-in-alt"></i></a>
      {% endif %}
   </div>
   <!-- END MOBIL MENU -->

   <!-- START JAVASCRIPT -->
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
   <script src="https://kit.fontawesome.com/0f420279a8.js" crossorigin="anonymous"></script>
   <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
   <script>
      AOS.init()
   </script>
   {% block javascript %}{% endblock %}
   <!-- END JAVASCRIPT -->

   <!-- START FOOTER -->
   <footer class="footer mt-auto py-4 border-top text-center">

      <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-2 g-3 mt-3 mb-3 mx-5">

         <div class="col menu-footer-left" data-aos="fade-right">
            <h3 class="text-uppercase">Menu</h3>
            <ul>
               <li><a href="{{ path('home') }}">Home</a></li>
               <li><a href="{{ path('home') }}#trick">Tricks</a></li>
               {% if app.user is null %}
               <li><a href="{{ path('app_login') }}">Sign in</a></li>
               <li><a href="{{ path('register') }}">Sign up</a></li>
               {% else %}
               <li><a href="{{ path('profile') }}">Profile</a></li>
               <li><a href="{{ path('add-new-trick') }}">Add new trick</a></li>
               <li><a href="{{ path('app_logout') }}">Log out</a></li>
               {% endif %}
            </ul>
         </div>

         <div class="col menu-footer-right" data-aos="fade-left">
            <h3 class="text-uppercase">Fast navigation</h3>
            <ul>
               <li><a href="/pages/legal-mentions">Legal mentions</a></li>
               <li><a href="/pages/general-terms-and-conditions-of-user ">General terms and conditions of use</a></li>
               <li><a href="/pages/privacy-policy">Privacy policy</a></li>
               <li><a href="/pages/legal-mentions">Cookie policy</a></li>
               <li><a href="mailto:contact@snowtrick.com">Contact</a></li>
            </ul>
         </div>

      </div>

      <div class="w-100 my-4">
         <span id="copyright">Copyright © Snowtricks.com 2021</span>
         <br>
      </div>

   </footer>
   <!-- END FOOTER -->

</body>

</html>