    <!-- Javascript AOS -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    <!-- Modal -->
    <script src="{{ asset('assets/js/modal.js') }}"></script>
    <!-- AJAX -->
     <script src="{{ asset('assets/js/ajax.js') }}"></script>
