{% extends 'base.html.twig' %}


{% block content %}

    <!-- HERO HEADER -->
    <div class="px-4 py-lg-5 py-md-5 py-3 text-center header-hero border-bottom"
        style="background-image: url('{{ asset('assets/img/maurienne-depuis-val-thorens-bisc-gudellaphoto-fotolia.com_.jpg') }}'); background-size: cover; height: 100vh;">

        <h1 class="display-5 fw-bold py-5 text-light"
            style="text-shadow: 1px 1px 2px white, 0 0 1em rgb(15, 146, 207), 0 0 0.2em black; font-size:5em">The snow
            must go on.</h1>

        <span class="goto-trick"><a href="#trick"><i class="fas fa-arrow-down"></i></a></span>
    </div>
    <!-- SECTION 1 -->
    <section class="py-5 px-5 bg-light" id="trick">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-5 g-3" id="js-moretricks-content">

            {% for trick in tricks %}
                 <div class="col" data-aos="flip-left" id="js-trick">
                <div class="card shadow-sm">
                    <img class="card-img-top home" style="height: 241px; object-fit: cover;" src="{{ asset('uploads/tricks/')}}{{ trick.imageCard }}" alt="Trick">
                    <div class="card-body row row-cols-12 row-cols-sm-12 row-cols-md-12">
                        <div class="col">
                            <div class="d-flex justify-content-between">
                                <span class="trick-name">
                                    <a class="btn btn-outline-info btn-sm trick-link text-uppercase" href="/trick/{{ trick.slug }}">{{ trick.title }}</a>
                                </span>
                                <span class="trick-edit">
                                    <a href=""><i class="fas fa-pencil-alt"></i></a> |
                                    <a onclick="openIndexModal('{{ trick.title }}',{{ trick.id }})" data="" style="cursor: pointer;"><i class="fas fa-trash-alt"></i></a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
           

        </div>

        <!-- Load more -->
        <div class="py-5 d-flex justify-content-center" id="js-moretricks-btn" ><a class="load-more-btn btn-outline-info btn-sm trick-link" onclick="onClickMoreTricks()"><img src="{{asset('assets/img/Loading.gif')}}" alt="loading" width="40px" id="js-loading-img" style="display: none;">Load more</a></div>
        
        <!-- back to trick -->
        <span class="backto-trick"><a href="#trick"><i class="fas fa-arrow-up"></i></a></span>

    </section>
    
    <!--end-->
{% for message in app.flashes('notify') %}
		<div class="alert alert-primary animate__animated animate__shakeX" role="alert" id="js-alert">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('notify_error') %}
		<div class="alert alert-danger animate__animated animate__shakeX" role="alert" id="js-alert">
			{{ message }}
		</div>
	{% endfor %}

{% endblock %}