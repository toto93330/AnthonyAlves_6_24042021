{% extends 'base.html.twig' %}

{% block title %}Hello AdminTrickController!{% endblock %}

{% block content %}

<!-- START SECTION ADMIN TRICK -->
   <div id="tricks-fix">
      <img class="background-tricks-image" src="{{ asset('assets/img/maurienne-depuis-val-thorens-bisc-gudellaphoto-fotolia.com_.jpg') }}" style="background-size: cover; position:absolute;" alt="">
      <form action="#" method="post">
         <section id="tricks-section" class="admin-trick">
            <div class="content-tricks bg-light">
               <div class="bg-light">
                  
                  <div class="tricks-header" style="background-image: url('{{ asset('assets/img/maurienne-depuis-val-thorens-bisc-gudellaphoto-fotolia.com_.jpg') }}'); background-size: cover;">
                  <label for="upload"><div id="preview"></div></label>
                     <div class="admin-edit float-left">
                        
                        <label for="image-card" style="cursor:pointer;"><i class="far fa-image"></i></label>
                        <a onclick="openIndexModal('test',1)"><i class="fas fa-trash-alt"></i></a>
                     </div>

                     <div class="tricks-title w-100 h-100 d-flex justify-content-center">
                        <span class="align-self-center h1 fw-bold text-light"
                           style="text-shadow: 1px 1px 2px white, 0 0 1em rgb(15, 146, 207), 0 0 0.2em black; font-size:3em; z-index:9999;">Trick
                           Name :<br><input class="admin-title" type="text"></span>
                     </div>

                  </div>

                  <a data-bs-toggle="collapse" href="#collapsemedia" aria-expanded="false" aria-controls="collapse" style="color: red;" class="cross-close"><i class="fas fa-times"></i></a>
                  <div class="d-flex justify-content-around flex-wrap" id="files-sticks" style="margin-top:0px;">
                     <div class="justify-content-around flex-wrap" id="hide">
                        <div class="collapse d-md-block" id="collapsemedia">
                           <div class="d-flex justify-content-around flex-wrap">

                              <span data-aos="flip-left" id="media-item">
                                 <div id="edit-media"><a href="#" class="btn">Delect</a></div><img src="{{ asset('assets/img/maurienne-depuis-val-thorens-bisc-gudellaphoto-fotolia.com_.jpg') }}" alt="tricks">
                              </span>

                              <span data-aos="flip-left" id="media-item">
                                 <div id="edit-media"><a href="#" class="btn">Delect</a></div><img src="{{ asset('assets/img/maurienne-depuis-val-thorens-bisc-gudellaphoto-fotolia.com_.jpg') }}" alt="tricks">
                              </span>

                              <span data-aos="flip-left" id="media-item">
                                 <div id="edit-media"><a href="#" class="btn">Delect</a></div>
                                 <video controls src="https://www.learningcontainer.com/wp-content/uploads/2020/05/sample-mp4-file.mp4"></video>
                              </span>

                           </div>
                        </div>
                     </div>
                  </div>

                  <div class="d-flex justify-content-around flex-wrap">
                     <a class="btn see-media-btn my-3" id="js-btn-see-media" data-bs-toggle="collapse" href="#collapsemedia" role="button" aria-expanded="false" aria-controls="collapsemedia">
                        See media
                     </a>
                  </div>
                  <hr style="background-color: grey;">

                  <div id="upload-image">
                     <h2 class="mb-3">Upload Image Card</h2>
                     <div class="d-flex justify-content-center flex-column flex-wrap w-100">

                        <input type="file" onchange="handleFiles(files)" name="image-card" id="image-card" class="d-none"><br>
                        <label for="image-card" class="btn" class="text-center">Upload File</label><br>
                        <small>(.jpg, .jpeg, .gif, .png).</small><br>

                     </div>
                  </div>

                  <hr style="background-color: grey;">

                  <article class='trick-article-content'>
                     <h2>Content</h2>
                     <textarea name="content" id="content" cols="30" rows="10" style="width: 100%;"></textarea>
                  </article>

                  <hr style="background-color: grey;">

                  <div id="select-category">
                     <h2>Select Category</h2>
                     <div class="d-flex justify-content-center flex-column flex-wrap w-100">

                        <select name="category" id="category">
                           <option value=""> Select Category </option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                           <option value="rotations">Rotations</option>
                        </select>
                        <small>(click here for select category).</small>
                     </div>
                  </div>

                  <hr style="background-color: grey;">

                  <div id="upload-image">
                     <h2 class="mb-3">Upload image</h2>
                     <div class="d-flex justify-content-center flex-column flex-wrap w-100">

                        <input type="file" name="image" id="image" class="d-none"><br>
                        <input type="file" onchange="handleFiles(files)" name="image-card" id="image-card" class="d-none"><br>
                        <label for="image" class="btn" class="text-center">Upload File</label><br>
                        <small>(.jpg, .jpeg, .gif, .png).</small><br>

                     </div>
                  </div>

                  <hr style="background-color: grey;">

                  <div id="upload-video">
                     <h2 class="mb-3">Upload video</h2>
                     <div class="d-flex justify-content-center flex-column flex-wrap w-100">
                        <textarea style="width: 50%;" name="upload-video" id="upload-video" rows="5"></textarea><br>
                        <small>(one link per line)</small>
                     </div>
                  </div>
                  
               </div>

               <div class="d-flex justify-content-center flex-column flex-wrap w-100">
                  <input type="submit" value="Submit Trick" class="btn submit-button">
               </div>

         </section>
      </form>
   </div>
<!-- END SECTION ADMIN TRICK -->

{% endblock %}

{% block javascript %}
<script src="{{ asset('assets/js/script.js') }}"></script>
<script src="{{ asset('assets/js/modale.js') }}"></script>
<script src="{{ asset('assets/js/ajax.js') }}"></script>
{% endblock %}

{% block modale_delect_trick %}

    <!-- START MODALE (REMOVE TRICK) -->
   <div id="modal-delect-trick"
      style="background-color: #1a1a1a85;  width: 100%; height: 100%; position:fixed; display:none; z-index:99999; padding-top:25%;">
      <div class="d-flex justify-content-center">
         <div id="modal-body" class="bg-light text-center p-2">
            <a onclick="closeIndexModal()" style="color: red; cursor:pointer;" class="close-modal"><i
                  class="fas fa-times"></i></a>
            <p class="p-2 modal-content bg-light">Are your sure to remove the trick: <span id="nom-du-trick"></span></p>
            <a href="#" class="m-2 btn btn-sm trick-link" id="modal-delect-trick">YES</a>
            <a onclick="closeIndexModal()" class="m-2 btn btn-sm trick-link" style="cursor: pointer;">NO</a>
         </div>
      </div>
   </div>
   <!-- END MODALE (REMOVE TRICK) -->

{% endblock %}
