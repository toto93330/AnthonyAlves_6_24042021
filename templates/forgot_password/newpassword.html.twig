{% extends 'base.html.twig' %}

{% block title %}Forgot Password ??{% endblock %}

{% block content %}
	<section class="login py-5 mx-auto" data-aos="flip-left">
		<div>
			<h3 class="text-center pb-5">Change Password</h3>
		</div>
		{{ form_start(form) }}


			<div class="py-3 text-center">{{ form_label(form.password.pass, "New Password") }}</div>
			{{ form_widget(form.password.pass) }}
			<div class="py-3 text-center">{{ form_label(form.password.confirm, "Confirm your new password") }}</div>
			{{ form_widget(form.password.confirm) }}
			<div class="text-center py-3">
				<button type="submit" class="btn forgot-password-btn mx-auto my-3 d-sm-block">Change Password</button>
			</div>


		{{ form_end(form) }}

	</section>

    {% for message in app.flashes('notify') %}
		<div class="alert alert-primary animate__animated animate__shakeX" role="alert" id="js-alert">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('notify_error') %}
		<div class="alert alert-danger animate__animated animate__shakeX" role="alert" id="js-alert">
			{{ message }}
		</div>
	{% endfor %}
    
{% endblock %}
